{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Electron",
      "type": "npm",
      "script": "electron",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "electron ."
          }
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "Start"
      ]
    },
    {
      "label": "Start",
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      },
      "group": "build",
    },
  ]
}
